#!/bin/bash

if [ ! "$DOCEPTION_CONTAINERS" ]
then
    DOCEPTION_CONTAINERS=`nproc`
fi

echo -e "--- Pull in busybox image"
/usr/bin/docker pull busybox

echo -e "--- Running ${DOCEPTION_CONTAINERS} parallel spec runners"
for i in $(seq 1 $DOCEPTION_CONTAINERS); do
    echo -e "\tStarting container #${i}"
    /usr/bin/docker run busybox echo hello world $i;
done
